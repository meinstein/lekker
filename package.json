{
  "name": "lekker",
  "version": "0.0.1",
  "description": "Easily generate static artifacts based from a dir tree.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"src/**/*\"",
    "build": "tsc",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "jsdom": "^16.4.0",
    "yargs": "^16.1.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/jsdom": "^16.2.5",
    "@types/node": "^14.14.7",
    "@types/yargs": "^15.0.10",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/__tests__"
    ],
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
